{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["es6", "dom", "es2017"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "experimentalDecorators": true,
    "moduleResolution": "Node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
